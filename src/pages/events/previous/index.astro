---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/sections/Header.astro';
import Footer from '../../../components/sections/Footer.astro';
import BoxForUsSection from '../../../components/sections/BoxForUsSection.astro';

const previousEvents = [
  {
    title: "BiYu Brawl April 26th",
    date: "April 26, 2024",
    venue: "Houston, TX",
    image: "/images/biyubrawlapril26th.webp"
  },
  {
    title: "Torres Event July 3rd",
    date: "July 3, 2024",
    venue: "Houston, TX",
    image: "/images/torresjuly3rd.webp"
  }
];
---

<Layout 
  title="Previous Events - BiYu Promotions | Past Boxing Events" 
  description="View BiYu Promotions' previous boxing events. Championship fights, memorable moments, and fight results from our past events."
>
  <Header />
  
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative h-[60vh] min-h-[400px] flex items-center justify-center text-white">
      <div class="absolute inset-0 z-0">
        <img 
          src="/images/previouseventshero.webp" 
          alt="Previous Boxing Events" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black/70"></div>
      </div>
      
      <div class="relative z-10 container mx-auto px-4 text-center">
        <h1 class="text-5xl md:text-7xl font-display font-bold mb-6 hero-text boxing-glow">
          PREVIOUS EVENTS
        </h1>
      </div>
    </section>

    <!-- Events Grid -->
    <section class="py-16 bg-black text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-2 gap-8">
            {previousEvents.map((event) => (
              <div class="relative overflow-hidden rounded-lg">
                <img 
                  src={event.image} 
                  alt={event.title}
                  class="w-full h-80 object-cover"
                  loading="lazy"
                />
                <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/90 via-black/70 to-transparent p-6">
                  <h2 class="text-2xl font-display font-bold text-[#FFD700] mb-2">{event.title}</h2>
                  <p class="text-lg mb-1">{event.date}</p>
                  <p class="text-base">{event.venue}</p>
                  <button class="biyu-unified-btn mt-4 px-4 py-2 text-sm">
                    View More
                  </button>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
    
    <BoxForUsSection />
    
  </main>

  <Footer />
</Layout>