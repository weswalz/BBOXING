                </svg>
                <a href="mailto:santodomingo@biyupromotions.com" class="font-semibold hover:text-primary">santodomingo@biyupromotions.com</a>
              </div>
              
              <div class="pt-2">
                <p class="text-sm text-base-content/80">
                  <span class="font-semibold text-primary">Caribbean Operations:</span> Regional talent development, Latin American partnerships
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div class="max-w-2xl mx-auto">
          <div class="combat-card rounded-lg p-8">
            <h2 class="text-3xl font-display font-bold mb-6 text-primary text-center">Get in Touch</h2>
            <p class="text-center text-base-content/80 mb-8">
              Interested in working with Biyu Promotions? Fill out the form below and we'll get back to you within 24 hours.
            </p>
            
            <form id="contact-form" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <input 
                  type="text" 
                  placeholder="First Name *" 
                  class="input input-bordered w-full bg-base-200 text-base-content focus:border-primary"
                  name="firstName"
                  required
                />
                <input 
                  type="text" 
                  placeholder="Last Name *" 
                  class="input input-bordered w-full bg-base-200 text-base-content focus:border-primary"
                  name="lastName"
                  required
                />
              </div>
              
              <input 
                type="email" 
                placeholder="Email Address *" 
                class="input input-bordered w-full bg-base-200 text-base-content focus:border-primary"
                name="email"
                required
              />
              
              <input 
                type="tel" 
                placeholder="Phone Number" 
                class="input input-bordered w-full bg-base-200 text-base-content focus:border-primary"
                name="phone"
              />
              
              <select class="select select-bordered w-full bg-base-200 text-base-content focus:border-primary" name="inquiryType" required>
                <option disabled selected>Select Inquiry Type *</option>
                <option value="fighter-management">Fighter Management</option>
                <option value="event-promotion">Event Promotion</option>
                <option value="media-partnership">Media Partnership</option>
                <option value="sponsorship">Sponsorship Opportunities</option>
                <option value="general">General Inquiry</option>
              </select>
              
              <textarea 
                placeholder="Tell us more about your inquiry *" 
                class="textarea textarea-bordered w-full bg-base-200 text-base-content focus:border-primary h-32"
                name="message"
                required
              ></textarea>
              
              <button 
                type="submit" 
                class="btn btn-primary font-display font-semibold w-full"
              >
                <span class="submit-text">Send Message</span>
                <span class="loading-text hidden">
                  <svg class="animate-spin -ml-1 mr-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  Sending...
                </span>
              </button>
              
              <!-- Success/Error Messages -->
              <div class="alert alert-success hidden" role="alert">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>Thanks for your message! We'll get back to you within 24 hours.</span>
              </div>
              
              <div class="alert alert-error hidden" role="alert">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="error-message">Something went wrong. Please try again.</span>
              </div>
            </form>
          </div>
        </div>
        
        <!-- Business Hours -->
        <div class="mt-16 max-w-4xl mx-auto">
          <h2 class="text-3xl font-display font-bold text-center mb-8 text-primary">Business Hours</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center combat-card rounded-lg p-6">
              <h3 class="text-xl font-semibold mb-4">Houston HQ</h3>
              <p class="text-base-content/80">Monday - Friday: 9:00 AM - 6:00 PM CST</p>
              <p class="text-base-content/80">Saturday: 10:00 AM - 4:00 PM CST</p>
              <p class="text-base-content/80">Sunday: Closed</p>
            </div>
            
            <div class="text-center combat-card rounded-lg p-6">
              <h3 class="text-xl font-semibold mb-4">Tampa Operations</h3>
              <p class="text-base-content/80">Monday - Friday: 9:00 AM - 5:00 PM EST</p>
              <p class="text-base-content/80">Saturday: By Appointment</p>
              <p class="text-base-content/80">Sunday: Closed</p>
            </div>
            
            <div class="text-center combat-card rounded-lg p-6">
              <h3 class="text-xl font-semibold mb-4">Santo Domingo</h3>
              <p class="text-base-content/80">Monday - Friday: 8:00 AM - 5:00 PM AST</p>
              <p class="text-base-content/80">Saturday: 9:00 AM - 2:00 PM AST</p>
              <p class="text-base-content/80">Sunday: Closed</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form');
    if (!form) return;
    
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const submitBtn = this.querySelector('button[type="submit"]');
      const submitText = submitBtn.querySelector('.submit-text');
      const loadingText = submitBtn.querySelector('.loading-text');
      const successAlert = this.querySelector('.alert-success');
      const errorAlert = this.querySelector('.alert-error');
      
      // Hide previous messages
      successAlert.classList.add('hidden');
      errorAlert.classList.add('hidden');
      
      // Show loading state
      submitText.classList.add('hidden');
      loadingText.classList.remove('hidden');
      submitBtn.disabled = true;
      
      try {
        const contactData = {
          firstName: formData.get('firstName'),
          lastName: formData.get('lastName'),
          email: formData.get('email'),
          phone: formData.get('phone'),
          inquiryType: formData.get('inquiryType'),
          message: formData.get('message'),
          timestamp: new Date().toISOString()
        };
        
        // TODO: Replace with actual API endpoint
        const response = await fetch('/api/contact', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(contactData),
        });
        
        if (response.ok) {
          successAlert.classList.remove('hidden');
          this.reset();
        } else {
          throw new Error('Network error');
        }
      } catch (error) {
        console.error('Contact form error:', error);
        errorAlert.querySelector('.error-message').textContent = 'Something went wrong. Please try again or call us directly.';
        errorAlert.classList.remove('hidden');
      } finally {
        // Reset button state
        submitText.classList.remove('hidden');
        loadingText.classList.add('hidden');
        submitBtn.disabled = false;
      }
    });
  });
</script>