---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/sections/Header.astro';
import Footer from '../../components/sections/Footer.astro';
import ContactForm from '../../components/ui/ContactForm.astro';
---

<Layout 
  title="Contact Us - BiYu Promotions | Get in Touch" 
  description="Contact BiYu Promotions for boxing promotion inquiries, fighter opportunities, and event information. Houston, Texas based boxing promotion company."
>
  <Header />
  
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative h-[60vh] min-h-[400px] flex items-center justify-center text-white">
      <div class="absolute inset-0 z-0">
        <img 
          src="/images/contactushero.webp" 
          alt="Contact BiYu Promotions" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black/70"></div>
      </div>
      
      <div class="relative z-10 container mx-auto px-4 text-center">
        <h1 class="text-5xl md:text-7xl font-display font-bold mb-6 hero-text boxing-glow">
          CONTACT US
        </h1>
      </div>
    </section>

    <!-- Contact Information Section -->
    <section class="py-16 bg-base-100">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-2 gap-12">
            <!-- Contact Info -->
            <div>
              <h2 class="text-3xl font-display font-bold mb-8 text-primary">Get in Touch</h2>
              
              <div class="space-y-6">
                <div class="flex items-start gap-4">
                  <svg class="w-6 h-6 text-primary mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <div>
                    <p class="font-semibold text-lg">Phone</p>
                    <a href="tel:+13462681590" class="text-base-content/80 hover:text-primary">+1 346-268-1590</a>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <svg class="w-6 h-6 text-primary mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <div>
                    <p class="font-semibold text-lg">Email</p>
                    <a href="mailto:info@biyuboxing.com" class="text-base-content/80 hover:text-primary">info@biyuboxing.com</a>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <svg class="w-6 h-6 text-primary mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <div>
                    <p class="font-semibold text-lg">Location</p>
                    <p class="text-base-content/80">Houston, Texas</p>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <svg class="w-6 h-6 text-primary mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                  </svg>
                  <div>
                    <p class="font-semibold text-lg">Website</p>
                    <a href="https://www.biyuboxing.com" class="text-base-content/80 hover:text-primary">www.biyuboxing.com</a>
                  </div>
                </div>
              </div>

              <!-- VIP List Section -->
              <div class="mt-12 p-6 bg-gradient-to-br from-primary/10 to-base-200 rounded-lg">
                <h3 class="text-2xl font-display font-bold mb-4 text-primary">Join the VIP List</h3>
                <p class="mb-6">
                  Be the first to know about upcoming events, ticket sales, and exclusive fighter announcements.
                </p>
                <ContactForm variant="vip" />
              </div>
            </div>

            <!-- Contact Form -->
            <div>
              <div class="p-8 bg-base-200 rounded-lg">
                <h2 class="text-3xl font-display font-bold mb-8 text-primary">Send Us a Message</h2>
                <ContactForm variant="contact" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Background Image Section -->
    <section class="py-16 bg-base-200">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <img 
            src="/images/sendusamessagebackground.webp" 
            alt="BiYu Promotions Contact" 
            class="w-full rounded-lg shadow-xl"
            loading="lazy"
          />
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>