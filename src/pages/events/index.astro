---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/sections/Header.astro';
import Footer from '../../components/sections/Footer.astro';
import BoxForUsSection from '../../components/sections/BoxForUsSection.astro';
---

<Layout 
  title="Upcoming Events - BiYu Promotions" 
  description="Don't miss BiYu Promotions' upcoming boxing events across the USA & beyond. Experience the action liveâ€”check out our fight schedule and get your tickets now!"
>
  <Header />
  
  <main class="min-h-screen">
    <!-- Hero Section with UPCOMING EVENTS -->
    <section class="relative h-[70vh] min-h-[500px] flex items-center justify-center text-white overflow-hidden">
      <div class="absolute inset-0 z-0">
        <img 
          src="/images/upcomingeventshero.webp" 
          alt="Upcoming Boxing Events" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-black/80 via-black/60 to-black/80"></div>
      </div>
      
      <div class="relative z-10 container mx-auto px-4 text-center">
        <h1 class="text-6xl md:text-8xl font-display font-black uppercase tracking-wider mb-6 hero-text">
          UPCOMING EVENTS
        </h1>
      </div>
    </section>

    <!-- Featured Event Section -->
    <section class="py-20 bg-black text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <!-- Event Poster -->
            <div class="flex justify-center md:justify-end">
              <img 
                src="/images/glovesandglory.webp" 
                alt="Gloves & Glory Event Poster" 
                class="w-full max-w-[300px] h-auto shadow-2xl"
                loading="lazy"
              />
            </div>
            
            <!-- Event Details -->
            <div class="text-center md:text-left">
              <div class="space-y-3">
                <p class="text-xl md:text-2xl font-bold uppercase">
                  BiYu Promotions and Marquez<br/>
                  Promotions Presents
                </p>
                <h2 class="text-4xl md:text-5xl font-display font-black text-[#F7DF5B] uppercase">
                  Gloves & Glory
                </h2>
                <div class="space-y-1 text-lg">
                  <p class="uppercase">Edinburg, TX</p>
                  <p class="uppercase font-semibold">Saturday September 6</p>
                </div>
                <div class="pt-4">
                  <a 
                    href="https://bertogdenarena.com/events/gloves-and-glory/" 
                    target="_blank"
                    rel="noopener"
                    class="inline-block bg-[#F7DF5B] text-black px-8 py-3 font-bold uppercase hover:bg-white hover:text-black active:bg-gray-100 active:text-black visited:bg-[#F7DF5B] visited:text-black transition-all duration-300 transform hover:scale-105"
                  >
                    Buy Tickets
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Box for Us CTA Section -->
    <BoxForUsSection />
    
  </main>

  <Footer />
</Layout>