---
import AdminLayout from '../../components/admin/AdminLayout.astro';
import { getCollection } from '../../lib/mongodb.js';

// Get statistics
let stats = {
  newsCount: 0,
  publishedCount: 0,
  draftCount: 0,
  mediaCount: 0,
  pagesCount: 0
};

try {
  const newsCollection = await getCollection('news');
  const mediaCollection = await getCollection('media');
  const pagesCollection = await getCollection('pages');
  
  stats.newsCount = await newsCollection.countDocuments();
  stats.publishedCount = await newsCollection.countDocuments({ published: true });
  stats.draftCount = await newsCollection.countDocuments({ published: false });
  stats.mediaCount = await mediaCollection.countDocuments();
  stats.pagesCount = await pagesCollection.countDocuments();
} catch (error) {
  console.error('Error fetching stats:', error);
}

// Get recent news
let recentNews = [];
try {
  const newsCollection = await getCollection('news');
  recentNews = await newsCollection
    .find({})
    .sort({ createdAt: -1 })
    .limit(5)
    .toArray();
} catch (error) {
  console.error('Error fetching recent news:', error);
}
