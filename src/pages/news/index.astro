---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/sections/Header.astro';
import Footer from '../../components/sections/Footer.astro';
import BoxForUsSection from '../../components/sections/BoxForUsSection.astro';

// Get all news articles from content collection, sorted by date (newest first)
const allNews = await getCollection('news');
const newsArticles = allNews.sort((a, b) => 
  new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);

// Get featured article (first/newest)
const featuredArticle = newsArticles[0];
const otherArticles = newsArticles.slice(1);

// Format date function
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long'
  });
};
---

<Layout 
  title="News - BiYu Promotions | Latest Boxing News & Updates" 
  description="Stay updated with the latest boxing news from BiYu Promotions. Fighter signings, fight results, upcoming events, and exclusive updates."
>
  <Header />
  
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative h-[60vh] min-h-[400px] flex items-center justify-center text-white">
      <div class="absolute inset-0 z-0">
        <img 
          src="/images/newshero.webp" 
          alt="BiYu Promotions News" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black/70"></div>
      </div>
      
      <div class="relative z-10 container mx-auto px-4 text-center">
        <h1 class="text-5xl md:text-7xl font-display font-bold mb-6 hero-text boxing-glow">
          NEWS
        </h1>
      </div>
    </section>

    <!-- Latest News Section -->
    <section class="py-16 bg-black text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-center mb-12 text-[#FFD700]">Latest News</h2>
          
          <!-- Featured Article -->
          {featuredArticle && (
            <article class="mb-16">
              <div class="grid lg:grid-cols-2 gap-8 items-start">
                <div class="lg:order-2">
                  <img 
                    src="/images/ChavonStillwell-news.webp" 
                    alt="Chavon Stillwell"
                    class="w-full h-auto rounded"
                    loading="lazy"
                  />
                </div>
                <div class="lg:order-1">
                  <h3 class="text-3xl font-display font-bold mb-4 text-[#FFD700]">{featuredArticle.data.title}</h3>
                  <p class="text-lg mb-4">{featuredArticle.data.excerpt}</p>
                  <div class="flex items-center gap-4">
                    <span class="text-sm text-gray-400">{formatDate(featuredArticle.data.publishDate)}</span>
                    <a href={`/news/${featuredArticle.slug}`} class="biyu-unified-btn px-4 py-2 text-sm">
                      Read More
                    </a>
                  </div>
                </div>
              </div>
            </article>
          )}
          
          <!-- News Grid -->
          <div class="grid md:grid-cols-3 gap-8">
            {otherArticles.map((article) => (
              <article>
                <div class="mb-4">
                  <img 
                    src={article.data.image} 
                    alt={article.data.imageAlt} 
                    class="w-full h-48 object-cover rounded"
                    loading="lazy"
                  />
                </div>
                <h3 class="text-xl font-display font-bold mb-2 text-[#FFD700]">{article.data.title}</h3>
                <p class="text-sm text-gray-300 mb-3">{article.data.excerpt}</p>
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-400">{formatDate(article.data.publishDate)}</span>
                  <a href={`/news/${article.slug}`} class="biyu-unified-btn px-3 py-1 text-xs">
                    Read More
                  </a>
                </div>
              </article>
            ))}
          </div>
          
        </div>
      </div>
    </section>
    
    <BoxForUsSection />
    
  </main>

  <Footer />
</Layout>